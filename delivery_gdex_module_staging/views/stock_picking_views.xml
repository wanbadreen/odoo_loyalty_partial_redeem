<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_picking_form_gdex_button" model="ir.ui.view">
      <field name="name">stock.picking.form.gdex.button</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_gdex_create"
                  type="object"
                  string="Create GDEX Consignment"
                  class="oe_highlight"/>
          <field name="gdex_cn" widget="badge" class="ml-2"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
